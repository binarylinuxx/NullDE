#!/bin/bash
keep=("gtk-3.0" "gtk-4.0" "hypr" "wlogout" "fastfetch" "cleanup_configs" "waybar" "rofi" "alacritty" "fish" "btop" "nvim" "eww" "swaync" "foot" "fuzzel" "wallust")

deleted_count=0
for item in *; do
    if [[ ! " ${keep[@]} " =~ " $item " ]]; then
        rm -rf "$item"
        echo "Deleted: $item"
        ((deleted_count++))
    fi
done

if [ $deleted_count -eq 0 ]; then
    echo "Nothing to clean - all files are in keep list"
else
    echo "Cleanup completed! Removed $deleted_count items"
fi
