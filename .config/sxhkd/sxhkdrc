# Screenshot
shift + Print
    scrot -d 5

# Application Launcher
super + space
    rofi -show drun

# Terminal
super + Return
    alacritty

# Window Management
super + q
    bspc node -c  # Close focused window

super + t
	bspc node -t ~floating  

# Session Management
super + shift + q
    bspc quit  # Quit bspwm completely
super + r
    bspc wm -r  # Reload bspwm

super + shift + r 
	pkill polybar && polybar

# Polybar Control
super + shift + p
    pkill polybar && polybar  # Restart polybar

# sxhkd Reload
super + e
    pkill -USR1 -x sxhkd

# Workspace Switching
super + {1-9}
    bspc desktop -f {1-9}
